<Window x:Class="InfoDroplets.Client.SerialWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:s="clr-namespace:InfoDroplets.Utils.SerialCommunication;assembly=InfoDroplets.Utils"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfoDroplets.Client"
        xmlns:vms="clr-namespace:InfoDroplets.Client.ViewModels"
        mc:Ignorable="d"
        Title="SerialWindow" Height="350" Width="700"
        Background="AliceBlue">
    <Window.DataContext>
        <vms:SerialWindowViewModel/>
    </Window.DataContext>
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Background="#E6E6E6" CornerRadius="10" Margin="0,0,0,10" Padding="10">
            <TextBlock Text="🔌 Connect to Serial Port" 
                       FontSize="22" FontWeight="Bold" 
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Content Area -->
        <Border Background="#D9D9D9" CornerRadius="10" Padding="20" Grid.Row="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="54*"/>
                    <RowDefinition Height="41*"/>
                    <RowDefinition Height="41*"/>
                    <RowDefinition Height="60*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>

                <!-- Title -->
                <TextBlock Text="Info-Droplet Client V1.0"
                           Grid.ColumnSpan="2"
                           FontSize="26"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Serial Port -->
                <TextBlock Text="Serial Port:" Grid.Row="1" VerticalAlignment="Center" FontSize="16" FontWeight="Bold"/>
                <ComboBox x:Name="cb_portOptions" Grid.Row="1" Grid.Column="1" Margin="5" Padding="5"
                          VerticalAlignment="Stretch"
                          ItemsSource="{Binding SerialPorts}"
                          SelectedItem="{Binding SelectedPort}"
                          VerticalContentAlignment="Center"
                          FontSize="16"/>

                <!-- Baud Rate -->
                <TextBlock Text="Baud Rate:" Grid.Row="2" VerticalAlignment="Center" FontSize="16" FontWeight="Bold"/>
                <ComboBox x:Name="cb_BaudRateOptions" Grid.Row="2" Grid.Column="1" Margin="5" Padding="5"
                          VerticalAlignment="Stretch"
                          ItemsSource="{Binding PossibleBaudRates}"
                          SelectedItem="{Binding SelectedBaudRate}"
                          SelectedIndex="1"
                          VerticalContentAlignment="Center"
                          FontSize="16"/>

                <!-- Submit Button -->
                <Button x:Name="bt_submit" Content="Open"
                        Grid.Row="3" Grid.ColumnSpan="2" Margin="0,15,0,0"
                        FontSize="16" FontWeight="Bold"
                        Command="{Binding StartCommand, Mode=OneWay}"
                        Background="#4CAF50" Foreground="White"
                        BorderBrush="#388E3C" BorderThickness="1"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Cursor="Hand"/>
            </Grid>
        </Border>
    </Grid>
</Window>
