<Window x:Class="InfoDroplets.ResultExporterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InfoDroplets.ResultExporterApp"
        mc:Ignorable="d"
        Title="Info-Droplets result exporter " Height="230" Width="700"
        ResizeMode="CanResize"
        Background="AliceBlue">
    <Grid Height="190" VerticalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="120 px" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="0.65*"/>
        </Grid.RowDefinitions>

        <Label x:Name="LogLabel" Content="Log folder:" VerticalAlignment="Center" Margin="10" Grid.Row="0" Grid.Column="0" />
        <TextBox x:Name="LogTextBox" IsEnabled="False" VerticalContentAlignment="Center" TextWrapping="NoWrap" Margin="10" Grid.Row="0" Grid.Column="1" />
        <Button x:Name="LogBrowseButton" Content="Browse" Margin="10" Click="LogBrowseButton_Click" Grid.Row="0" Grid.Column="2" />
        <Label x:Name="OutLabel" Content="Output folder:" VerticalAlignment="Center" Margin="10" Grid.Row="1" Grid.Column="0" />
        <TextBox x:Name="OutTextBox" IsEnabled="False" VerticalContentAlignment="Center" TextWrapping="NoWrap" Margin="10" Grid.Row="1" Grid.Column="1" />
        <Button x:Name="OutBrowseButton" Content="Browse" Margin="10" Click="OutBrowseButton_Click"  Grid.Row="1" Grid.Column="2" />
        <Button x:Name="ExportButton" Content="Export" Margin="10,10,10,0" Click="ExportButton_Click" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"/>
        <Label x:Name="ProgressLabel" Content="{Binding Source={x:Static local:GlobalLabelHelper.Instance}, Path=LabelText, Mode=OneWay}" Margin="10,4,10,0" Padding="5,5,0,5" HorizontalAlignment="Right" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3"/>
    </Grid>
</Window>
